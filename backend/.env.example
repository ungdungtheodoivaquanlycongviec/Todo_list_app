PORT=8080
MONGODB_URI=mongodb://localhost:27017/todolist
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_this_too
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary config (for file upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# File upload limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_TASK=20

# Realtime & presence
ENABLE_REALTIME_NOTIFICATIONS=true
SOCKET_NAMESPACE=/ws/app
# Comma-separated list of allowed CORS origins for Socket.IO; leave empty to use defaults
SOCKET_ALLOWED_ORIGINS=http://localhost:3000
SOCKET_HEARTBEAT_INTERVAL_MS=25000
SOCKET_MAX_PAYLOAD_BYTES=5120
PRESENCE_TTL_SECONDS=60

# Redis adapter (optional)
ENABLE_SOCKET_REDIS_ADAPTER=false
REDIS_URL=
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_TLS=false
