      "name": "6. Security & Rate Limiting",
      "item": [
        {
          "name": "6.1 Rate Limit Test - Multiple Logins",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// This test expects to eventually hit rate limit",
                  "// Run this multiple times rapidly to test rate limiting",
                  "const statusCode = pm.response.code;",
                  "",
                  "if (statusCode === 429) {",
                  "    pm.test(\"Rate limit working - 429 status\", () => {",
                  "        pm.response.to.have.status(429);",
                  "    });",
                  "    ",
                  "    pm.test(\"Rate limit error message\", () => {",
                  "        const response = pm.response.json();",
                  "        pm.expect(response.success).to.be.false;",
                  "    });",
                  "} else {",
                  "    pm.test(\"Request within rate limit\", () => {",
                  "        pm.expect([200, 401]).to.include(statusCode);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
