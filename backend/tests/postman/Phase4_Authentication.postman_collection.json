          "name": "1.1 Register New User - Success",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", () => {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response structure is correct\", () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.message).to.exist;",
                  "    pm.expect(response.data).to.have.property('user');",
                  "    pm.expect(response.data).to.have.property('accessToken');",
                  "    pm.expect(response.data).to.have.property('refreshToken');",
                  "});",
                  "",
                  "pm.test(\"User data is correct\", () => {",
                  "    const user = pm.response.json().data.user;",
                  "    pm.expect(user.email).to.equal('testuser@example.com');",
                  "    pm.expect(user.name).to.equal('Test User');",
                  "    pm.expect(user.role).to.equal('user');",
                  "    pm.expect(user.isActive).to.be.true;",
                  "    pm.expect(user).to.not.have.property('password');",
                  "});",
                  "",
                  "pm.test(\"Tokens are valid\", () => {",
                  "    const data = pm.response.json().data;",
                  "    pm.expect(data.accessToken).to.be.a('string').and.not.empty;",
                  "    pm.expect(data.refreshToken).to.be.a('string').and.not.empty;",
                  "    ",
                  "    // Save tokens",
                  "    pm.collectionVariables.set('accessToken', data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', data.refreshToken);",
                  "    pm.collectionVariables.set('userId', data.user._id);",
                  "    pm.collectionVariables.set('userEmail', data.user.email);",
                  "});",
                  "",
                  "pm.test(\"Response time is acceptable\", () => {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
