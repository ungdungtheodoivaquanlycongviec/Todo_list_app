									"pm.test(\"Comment updated successfully\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test(\"Comment is marked as edited\", function () {",
									"    var jsonData = pm.response.json();",
									"    var commentId = pm.collectionVariables.get(\"commentId\");",
									"    var updatedComment = jsonData.data.comments.find(c => c._id === commentId);",
									"    if (updatedComment) {",
									"        pm.expect(updatedComment.isEdited).to.be.true;",
									"        pm.expect(updatedComment.updatedAt).to.exist;",
									"    }",
									"});"
								],
