							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Comment added successfully\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"    pm.expect(jsonData.data.comments).to.be.an('array');",
									"    pm.expect(jsonData.data.comments.length).to.be.above(0);",
									"    ",
									"    // Save comment ID",
									"    var lastComment = jsonData.data.comments[jsonData.data.comments.length - 1];",
									"    pm.collectionVariables.set(\"commentId\", lastComment._id);",
									"});",
									"",
									"pm.test(\"Comment has correct structure\", function () {",
									"    var jsonData = pm.response.json();",
									"    var comment = jsonData.data.comments[jsonData.data.comments.length - 1];",
									"    pm.expect(comment).to.have.property('content');",
									"    pm.expect(comment).to.have.property('user');",
									"    pm.expect(comment).to.have.property('createdAt');",
									"    pm.expect(comment.isEdited).to.be.false;",
									"});"
								],
