							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Files uploaded successfully\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"    pm.expect(jsonData.data.attachments).to.be.an('array');",
									"    pm.expect(jsonData.data.attachments.length).to.be.greaterThan(0);",
									"});",
									"",
									"pm.test(\"Attachment has required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    var attachment = jsonData.data.attachments[0];",
									"    pm.expect(attachment).to.have.property('_id');",
									"    pm.expect(attachment).to.have.property('filename');",
									"    pm.expect(attachment).to.have.property('url');",
									"    pm.expect(attachment).to.have.property('publicId');",
									"    pm.expect(attachment).to.have.property('mimetype');",
									"    pm.expect(attachment).to.have.property('size');",
									"    pm.expect(attachment).to.have.property('resourceType');",
									"    pm.expect(attachment).to.have.property('uploadedBy');",
									"    ",
									"    // Save attachment ID for delete test",
									"    pm.collectionVariables.set(\"attachmentId\", attachment._id);",
