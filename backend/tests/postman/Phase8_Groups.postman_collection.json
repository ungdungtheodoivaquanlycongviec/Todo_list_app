      "item": [
        {
          "name": "Register Group Owner",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const email = `group_owner_${Date.now()}@example.com`;",
                  "pm.collectionVariables.set('groupOwnerEmail', email);",
                  "pm.collectionVariables.set('groupOwnerPassword', 'OwnerPass123!');"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "const json = pm.response.json();",
                  "pm.test('Owner registration succeeded', function () {",
                  "  pm.expect(json.success).to.be.true;",
                  "  pm.expect(json.data).to.have.property('user');",
                  "});",
                  "if (json.data && json.data.user) {",
                  "  pm.collectionVariables.set('groupOwnerId', json.data.user._id);",
                  "  pm.collectionVariables.set('groupOwnerName', json.data.user.name || 'Group Owner');",
                  "}",
                  "if (json.data && json.data.accessToken) {",
                  "  pm.collectionVariables.set('groupOwnerAccessToken', json.data.accessToken);",
                  "}",
                  "if (json.data && json.data.refreshToken) {",
                  "  pm.collectionVariables.set('groupOwnerRefreshToken', json.data.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{groupOwnerEmail}}\",\n  \"password\": \"{{groupOwnerPassword}}\",\n  \"name\": \"Phase8 Owner\"\n}"
            },
            "url": {
              "raw": "{{apiBaseUrl}}/api/auth/register",
              "host": [
                "{{apiBaseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            }
          },
          "response": []
        },
