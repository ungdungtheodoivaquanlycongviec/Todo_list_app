      "name": "Tasks",
      "item": [
        {
          "name": "Create Task - Success",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has task data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.eql(true);",
                  "    pm.expect(jsonData.data).to.have.property('_id');",
                  "    pm.expect(jsonData.data).to.have.property('title');",
                  "    ",
                  "    // Save task ID for other tests - QUAN TRỌNG!",
                  "    pm.collectionVariables.set(\"taskId\", jsonData.data._id);",
                  "    console.log(\"Task ID saved:\", jsonData.data._id);",
                  "});",
                  "",
                  "pm.test(\"Task has correct data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.title).to.eql(\"Hoàn thành báo cáo dự án\");",
                  "    pm.expect(jsonData.data.priority).to.eql(\"high\");",
                  "    pm.expect(jsonData.data.status).to.eql(\"todo\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Hoàn thành báo cáo dự án\",\n  \"description\": \"Viết báo cáo chi tiết về tiến độ dự án Todo List\",\n  \"priority\": \"high\",\n  \"status\": \"todo\",\n  \"dueDate\": \"2025-10-15T17:00:00.000Z\",\n  \"tags\": [\"báo cáo\", \"dự án\", \"quan trọng\"],\n  \"category\": \"Công việc\",\n  \"createdBy\": \"507f1f77bcf86cd799439011\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks"]
            }
          },
          "response": []
        },
